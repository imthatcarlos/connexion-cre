<h1>Projects</h1>

<%= will_paginate @projects, renderer: BootstrapPagination::Rails %>

<table class="table">
  <thead>
    <tr>
      <td>Name</td>
      <td>Location</td>
      <td>Type</td>
      <td>Status</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.location %></td>
        <td><%= p.type %></td>
        <td><%= p.status %></td>
        <td><%= link_to "Shipment Summary", shipment_summary_path(p.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>