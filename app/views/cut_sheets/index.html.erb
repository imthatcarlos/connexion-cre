<div class="page-header">
  <h1>Cutsheets</h1>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <th>Job ID</th>
    <th>Type</th>
    <th>Description</th>
    <th>Manufacturer</th>
    <th>Cutsheet</th>
  </thead>
  <tbody>
    <% @cut_sheets.each do |cs| %>
      <tr>
        <td><%= cs.job_id  %></td>
        <td><%= cs.fixture_type %></td>
        <td><%= cs.description %></td>
        <td><%= cs.manufacturer %></td>
        <td><%= link_to('Cutsheet (PDF)', cs.pdf_url) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
